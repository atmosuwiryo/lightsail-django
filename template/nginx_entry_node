upstream CHANGE_HERE__app_server {
  server http://localhost:3000 fail_timeout=0;
}

server {
    listen   80;
    listen   [::]:80;
    server_name DOMAIN_HERE;

    client_max_body_size 4G;

    access_log /webapps/CHANGE_HERE__nodejs/logs/nginx-access.log;
    error_log /webapps/CHANGE_HERE__nodejs/logs/nginx-error.log;

    location /static/ {
        alias   /webapps/CHANGE_HERE__nodejs/static/;
    }

    location /media/ {
        alias   /webapps/CHANGE_HERE__nodejs/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://CHANGE_HERE__app_server;
            break;
        }
    }

    # Error pages
    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root /webapps/CHANGE_HERE__nodejs/static/;
    }
}

